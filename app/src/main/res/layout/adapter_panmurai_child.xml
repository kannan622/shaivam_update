<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/adapter_child_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/card_thirumurai_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/adapter_child_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/thirumurai_child_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingLeft="@dimen/_24sdp"
            android:paddingRight="@dimen/_24sdp"
            android:background="@color/adapter_child_bg"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:layout_gravity="center|start"
            android:textAlignment="gravity"
            android:drawableRight="@drawable/ic_right_arrow"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_10sdp" />

        <View
            android:id="@+id/thirumurai_child_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:background="@color/adapter_child_view" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>