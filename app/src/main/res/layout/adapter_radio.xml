<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/radio_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:background="@drawable/background_tirumurai"
        android:paddingLeft="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/radio_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_shaivam_fm_radio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/radio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:text="@string/tamil_radio_tilte"
            android:textAppearance="@style/TextAppearance.FontPath"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/radio_image"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/radio_player"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:textAppearance="@style/TextAppearance.FontPath"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/radio_direction"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/radio_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_shaivam_fm_play"
            android:textAppearance="@style/TextAppearance.FontPath"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/recent_radio_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/radio_linear"
        app:layout_constraintTop_toBottomOf="@+id/radio_linear">

        <TextView
            android:id="@+id/recent_radio_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:text="@string/tamil_radio_recent_tilte"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/recent_radio_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:text="@string/thevaram"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_8sdp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>