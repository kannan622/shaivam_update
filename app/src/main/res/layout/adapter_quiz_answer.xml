<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/answer_main"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RadioButton
        android:id="@+id/answer_text_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:layout_margin="@dimen/_8sdp"
        android:paddingTop="@dimen/_8sdp"
        android:text="@string/app_name"
        android:textAlignment="gravity"
        android:textAppearance="@style/TextAppearance.FontPath_Latto"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/_12sdp"
        android:visibility="visible"/>


    <LinearLayout
        android:id="@+id/answer_text_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/correct_color_dark">


        <ImageView
            android:id="@+id/answer_text_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:layout_margin="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:src="@drawable/ic_cancel"/>

        <TextView
            android:id="@+id/answer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:layout_margin="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:text="@string/app_name"
            android:textAlignment="gravity"
            android:textAppearance="@style/TextAppearance.FontPath_Latto"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>