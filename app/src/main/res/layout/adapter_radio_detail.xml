<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_4sdp"
    android:background="@color/bg_white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_radio_detail"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/radio_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_8sdp"
        android:weightSum="3"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/radio_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/_4sdp"
            android:text="@string/tamil_radio_tilte"
            android:textAppearance="@style/TextAppearance.FontPath" />

        <LinearLayout
            android:id="@+id/recent_radio_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:singleLine="true"
                android:maxLength="6"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/timimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/presenter_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/recent_presenter_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:singleLine="true"
                    android:text="@string/artist"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/recent_presenter_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:singleLine="true"
                    android:text="@string/category"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/type_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:visibility="visible"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_reminder" />

            <Switch
                android:id="@+id/reminderSwitch"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingTop="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout></LinearLayout>