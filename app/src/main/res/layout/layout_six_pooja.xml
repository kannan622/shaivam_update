<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_Gray_2"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.SixTimePoojaActivity"
    tools:showIn="@layout/activity_six_time_pooja">

    <org.shaivam.utils.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16sdp"
                android:background="@drawable/background_song_details"
                android:elevation="@dimen/_2sdp"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/pooja_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:drawableLeft="@drawable/ic_reminder"
                        android:drawablePadding="@dimen/_16sdp"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/poojairemain"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_14sdp" />

                    <Switch
                        android:id="@+id/switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:switchPadding="@dimen/_4sdp"
                        android:text="@string/on"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_Gray_2" />

                <TextView
                    android:id="@+id/pooja_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/puja_text"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16sdp"
                android:background="@drawable/background_song_details"
                android:elevation="@dimen/_2sdp"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ushat_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/ushat_time"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/ushat_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:padding="@dimen/_8sdp"
                        app:layout_constraintLeft_toRightOf="@+id/ushat_time"
                        android:text="@string/ushat"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />

                    <Switch
                        android:id="@+id/ushat_switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:switchPadding="@dimen/_4sdp"
                        android:text="@string/on"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_Gray_2" />
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/kaala_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/kaala_time"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/kaala_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:padding="@dimen/_8sdp"
                        app:layout_constraintLeft_toRightOf="@+id/kaala_time"
                        android:text="@string/kaala"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />

                    <Switch
                        android:id="@+id/kaala_switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:switchPadding="@dimen/_4sdp"
                        android:text="@string/on"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_Gray_2" />
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/uchi_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/uchi_time"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/uchi_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:padding="@dimen/_8sdp"
                        app:layout_constraintLeft_toRightOf="@+id/uchi_time"
                        android:text="@string/uchi"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />

                    <Switch
                        android:id="@+id/uchi_switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:switchPadding="@dimen/_4sdp"
                        android:text="@string/on"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_Gray_2" />
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/saya_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/saya_time"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/saya_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:padding="@dimen/_8sdp"
                        app:layout_constraintLeft_toRightOf="@+id/saya_time"
                        android:text="@string/saya"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />

                    <Switch
                        android:id="@+id/saya_switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:switchPadding="@dimen/_4sdp"
                        android:text="@string/on"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_Gray_2" />
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/iranda_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/iranda_time"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/iranda_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:padding="@dimen/_8sdp"
                        app:layout_constraintLeft_toRightOf="@+id/iranda_time"
                        android:text="@string/iranda"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />

                    <Switch
                        android:id="@+id/iranda_switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:switchPadding="@dimen/_4sdp"
                        android:text="@string/on"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_Gray_2" />
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ardha_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/ardha_time"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/ardha_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:padding="@dimen/_8sdp"
                        app:layout_constraintLeft_toRightOf="@+id/ardha_time"
                        android:text="@string/ardha"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />

                    <Switch
                        android:id="@+id/ardha_switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:switchPadding="@dimen/_4sdp"
                        android:text="@string/on"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_Gray_2" />
            </LinearLayout>
        </LinearLayout>
    </org.shaivam.utils.MyNestedScrollView>

</LinearLayout>